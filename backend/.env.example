# ==============================================
# VARLIXO - ENVIRONMENT VARIABLES TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=varlixo

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Server
PORT=5000
NODE_ENV=production

# Frontend URL
FRONTEND_URL=https://www.varlixo.com

# Email - MailerLite SMTP
SMTP_HOST=smtp.mailerlite.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-smtp-password-or-api-key
EMAIL_FROM=noreply@varlixo.com
SKIP_SMTP_VERIFICATION=true

# Admin
ADMIN_SECRET_ROUTE=your-secure-admin-route
ADMIN_DEFAULT_EMAIL=admin@varlixo.com
ADMIN_DEFAULT_PASSWORD=your-secure-admin-password

# Multi-currency support
AUTO_CURRENCY=true
FX_PROVIDER_PRIMARY=https://api.exchangerate.host
FX_PROVIDER_FALLBACK=https://open.er-api.com/v6
FX_TTL_SECONDS=3600
DEFAULT_CURRENCY=USD

# On-chain deposit detection (polling)
ONCHAIN_EVM_NETWORKS=
ONCHAIN_EVM_TOKEN_ASSETS=
ONCHAIN_EVM_RPC_ETHEREUM=
ONCHAIN_EVM_RPC_BSC=
ONCHAIN_EVM_RPC_POLYGON=
